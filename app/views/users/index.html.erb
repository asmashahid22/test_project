<%@users.each do |user|%>
    <h3><%= user.username %></h3>
 <% if current_user!=user%>
    <% if current_user.following_users.include?(user)%>
      <%= link_to 'unfollow',unfollow_user_path(user),method: :delete,class:"btn btn-warning btn-sm shadow"%>
    <br>
    <% elsif current_user.receiving_users.include? (user)%>
      <%= link_to 'remove request',remove_follow_request_user_path(user), method: :delete,class:"btn btn-danger btn-sm shadow"%>
    <%else%>
      <%= link_to 'follow',follow_user_path(user),method: :post,class:"btn btn-info btn-sm shadow"%>
    <%end%>
  <%end%>
    <br>
<%end%>
<br />
<div align="center" class="m-5">
<%= paginate @users %>
</div>
<br>
<%= link_to 'Back',root_path,class:"btn btn-primary shadow"%>